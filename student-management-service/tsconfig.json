{
  "compilerOptions": {
    "types": ["node", "express"],
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types", "./types"
    ],
  },
  "exclude": ["node_modules"]
}
